{% extends 'base.html.twig' %}

{% block title %}SNOWTRICKS • Inscription{% endblock %}

{% block body %}


<!-- V-card Background-color -->
<v-card flat outlined style="z-index:-1;position:fixed;top:0;left:0;height:100%;width:100%;background-color:#85C1E9;"></v-card>

{#{% if member.username is empty %}#}

<v-container fluid class="mt-n3">
    <v-row>

        <v-col cols="12">

            <v-card class="pa-5" color="rgba(255,255,255,0)" outlined>

                <v-row>

                    <v-col cols="12" md="4"></v-col>

                    <v-col cols="12" md="4">
                        <v-card class="pa-5" outlined style="border-color:rgb(255,255,255,0);" color="rgba(255,255,255,0.2)">

                            <p>Formulaire d'inscription</p>

                            {{ form_start(formSecurity) }}

                            {{ form_row(formSecurity.username, {'label': ' ', 'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}

                            {{ form_row(formSecurity.email, {'label': ' ', 'attr': {'placeholder': 'Adresse email'}}) }}

                            {{ form_row(formSecurity.password, {'label': ' ', 'attr': {'placeholder': 'Mot de passe'}}) }}

                            {{ form_row(formSecurity.confirm_password, {'label': ' ', 'attr': {'placeholder': 'Confirmation'}}) }}

                            {{ form_row(formSecurity.avatar, {'label': 'Image de profil', 'attr': {'class': 'input-file'}}) }}

                            <button type="submit" style="float:right;">Inscription</button>

                            {{ form_end(formSecurity) }}

                        </v-card>
                    </v-col>

                    <v-col cols="12" md="4"></v-col>

                </v-row>

            </v-card>
        </v-col>

    </v-row>
</v-container>

