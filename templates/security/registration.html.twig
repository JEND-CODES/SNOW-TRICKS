{% extends 'base.html.twig' %}
{% block title %}SNOWTRICKS • Inscription{% endblock %}
{% block body %}

<v-card class="special-background" flat outlined></v-card>

<v-container fluid class="mt-n3">

    <v-row class="box-new-position">

        <v-col cols="12">

            <v-card class="pa-5" color="rgba(255,255,255,0)" outlined>

                <v-row>

                    <v-col cols="12" md="4"></v-col>

                    <v-col cols="12" md="4">

                        <v-card class="pa-5" outlined color="rgba(255,255,255,0.2)">

                            <p>FORMULAIRE D'INSCRIPTION</p>

                            {{ form_start(formSecurity) }}

                            {{ form_row(formSecurity.username, {'label': ' ', 'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}

                            {{ form_row(formSecurity.email, {'label': ' ', 'attr': {'placeholder': 'Adresse email'}}) }}

                            {{ form_row(formSecurity.password, {'label': ' ', 'attr': {'placeholder': 'Mot de passe'}}) }}

                            {{ form_row(formSecurity.confirm_password, {'label': ' ', 'attr': {'placeholder': 'Confirmation'}}) }}

                            {{ form_row(formSecurity.avatar, {'label': 'Image de profil','label_attr': {'class': 'special-label'}, 'attr': {'class': 'input-file'}}) }}

                            <button type="submit" class="register-sublink">Inscription</button>

                            {{ form_end(formSecurity) }}

                        </v-card>

                    </v-col>

                    <v-col cols="12" md="4"></v-col>

                </v-row>

            </v-card>

        </v-col>

    </v-row>
    
</v-container>

<p class="text-center mt-n4">
    <a href="{{ path('security_connexion') }}">Déjà inscrit ?</a>
</p>

<div class="big-spacer"></div>
<div class="big-spacer"></div>

{% endblock %}

{% block javascripts %}

{% endblock %}
