{% extends 'base.html.twig' %}
{% block title %}SNOWTRICKS • Password oublié{% endblock %}
{% block body %}

<v-card class="special-background" flat outlined></v-card>

<v-container fluid class="mt-n3">
    <v-row>

        <v-col cols="12">

            <v-card class="pa-5" color="rgba(255,255,255,0)" outlined>

                <v-row>

                    <v-col cols="12" md="4"></v-col>

                    <v-col cols="12" md="4">
                        <v-card class="pa-5" outlined color="rgba(255,255,255,0.2)">

                            <p>Remplacer l'ancien mot de passe</p>

                            {{ form_start(forgotSecurity) }}

                            {{ form_row(forgotSecurity.username, {'label': ' ', 'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}

                            {{ form_row(forgotSecurity.password, {'label': ' ', 'attr': {'placeholder': 'Nouveau password'}}) }}

                            {{ form_row(forgotSecurity.confirm_password, {'label': ' ', 'attr': {'placeholder': 'Confirmation'}}) }}

                            <button type="submit">Remplacer</button>

                            {{ form_end(forgotSecurity) }}

                        </v-card>
                    </v-col>

                    <v-col cols="12" md="4"></v-col>

                </v-row>

            </v-card>
        </v-col>

    </v-row>
</v-container>

<div class="big-spacer"></div>
<div class="big-spacer"></div>

{% endblock %}
